<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity1">

    <com.example.agnanaku.subclassingaview.MyTextView
        app:initialValue="@integer/zero"
        android:textSize="30dp"
        android:id="@+id/myView001"
        android:layout_height="100dp"
        android:layout_width="100dp"
        android:gravity="center"
        android:background="#f00"
        android:textColor="#000"/>

    <com.example.agnanaku.subclassingaview.MyTextView
        android:id="@+id/top_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:background="#ff44aacc"
        android:layout_centerVertical="true"/>

    <com.example.agnanaku.subclassingaview.MyTextView
        android:id="@+id/top_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft= "255dp"
        android:background="#cc1f45"
        android:layout_centerVertical="true"/>

    <com.example.agnanaku.subclassingaview.MyTextView
        android:id="@+id/bottom_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop= "380dp"
        android:background="#17cc1d"/>

    <com.example.agnanaku.subclassingaview.MyTextView
        android:id="@+id/bottom_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop= "380dp"
        android:layout_marginLeft= "260dp"
        android:background="#f8ff23"
        android:layout_centerVertical="true"/>

</RelativeLayout>
